<!DOCTYPE html>
<html lang="en">
    <%-include('./partials/header.ejs')%>

    <div>
        <h1>All Blogs</h1>
        <% if(blogs.length>0){%>
            <%blogs.forEach(blog=>{%>
                <a href="<%= blog._id %>">
                    <h2><%=blog.title%></h2>
                    <p><%=blog.snippet%></p>
                    <p><%=blog.body%></p>
                </a>


            <%})%>

        <%}else{%>

            <p>there is no blog</p>

        <%}%>
    </div>

    
</body>
</html>